<!DOCTYPE html>
<html>
  <head>
    <title>ClubMatch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <!--START　ヘッダー-->
      <nav class ="navbar navbar-expand-lg navbar-light">
        <div class ="container mt-0">
        <!--START ヘッダー共通部分-->
          <!--START　ロゴ-->
          <div class ="navbar-brand ">
            <% if admin_signed_in? %>
              <%= link_to admin_path do %>
                <%= image_tag'club_match_logo.png', :size => '125x125' %>
              <% end %>
            <% else %>
              <%= link_to root_path do %>
                <%= image_tag'club_match_logo.png', :size => '125x125' %>
              <% end %>
            <% end %>
          </div>
          <!--END　ロゴ-->

          <button 
            class="navbar-toggler" 
            type="button" 
            data-toggle="collapse" 
            data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" 
            aria-expanded="false" 
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        <!--END ヘッダー共通部分-->

          <div class ="collapse navbar-collapse" id="navbarNavDropdown">
            <!--START　ユーザーログイン後のヘッダー-->
            <% if user_signed_in? %>
              <small><%= current_user.club_name %>さん、ようこそ！</small>
              <ul class ="navbar-nav ml-auto">
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to '応募履歴', 
                    entries_path,
                    class:"btn btn-warning btn-gradient py-2 w-100 no-wrap" 
                  %>
                </li>
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to '募集する', 
                    new_recruit_path,
                    class:"btn btn-warning btn-gradient py-2 w-100  no-wrap" 
                  %>
                </li>
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to 'マイページ', 
                    user_my_page_path(current_user.id),
                    class:"btn btn-warning btn-gradient py-2 w-100 no-wrap"
                  %>
                </li>
                <li class ="nav-item">
                  <%= link_to 'ログアウト', 
                    destroy_user_session_path, 
                    method: :delete,
                    class:"btn btn-warning btn-gradient py-2 w-100  no-wrap" 
                  %>
                </li>
              </ul>
            <!--END ユーザーログイン後のヘッダー-->

            <!--START 管理者ログイン後のヘッダー-->
            <% elsif admin_signed_in? %>
              <ul class ="navbar-nav ml-auto">
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to 'ジャンル管理', 
                    admin_genres_path,
                    class:"btn btn-warning btn-gradient w-100 py-2 no-wrap"
                  %>
                </li>
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to 'ユーザー一覧', 
                    admin_path,
                    class:"btn btn-warning btn-gradient w-100 py-2 no-wrap"
                  %>
                </li>
                <li class ="nav-item">
                  <%= link_to 'ログアウト', 
                    destroy_admin_session_path,
                    method: :delete, 
                    class:"btn btn-warning btn-gradient w-100 py-2 no-wrap" 
                  %>
                </li>
              </ul>
            <!--END 管理者ログイン後のヘッダー-->

            <!--START ログアウト後(サインイン前)のヘッダー-->
            <% else %>
              <ul class ="navbar-nav ml-auto">
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to '募集一覧', 
                    recruits_path,
                    class:"btn btn-warning btn-gradient w-100 py-2 no-wrap"
                  %>
                </li>
                <li class ="nav-item mr-3 mb-1">
                  <%= link_to '新規登録', 
                    new_user_registration_path,
                    class: "btn btn-warning btn-gradient w-100 py-2 no-wrap"
                  %>
                </li>
                <li class ="nav-item">
                  <%= link_to 'ログイン', 
                    new_user_session_path,
                    class:"btn btn-warning btn-gradient w-100 py-2 no-wrap"
                  %>
                </li>
              </ul>
            <% end %>
            <!--END ログアウト後のヘッダー-->
          </div>
        </div>
      </nav>
      <!--END　ヘッダー-->
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>
    <%#= debug(params) if Rails.env.development? %>
    
    <!--START フッター-->
    <footer class="footer">
      <div class="bg-warning bg-gradient p-2">
        <p class="text-light text-center m-0">ClubMatch</p>
      </div>
    </footer>
    <!--END フッター-->
    
  </body>
</html>