<div class="container">
  <h3>練習場所登録</h3>
  <div class ="row">
    <div class ="col-md-10 mt-3 mb-5">
      <%= form_with model: @site do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.select :prefecture, 
        Site.prefectures_i18n.keys.map{|k| [I18n.t("enums.site.prefecture.#{k}"), k] }, 
        {include_blanck: t("選択してください")}, 
        class:"mr-2" 
      %>
      <%= f.text_field :municipality, class:"mr-2" %>
      <%= f.text_field :address, class:"mr-2" %>
      <%= f.submit '登録', class:"btn btn-success w-25" %>
      <% end %>
    </div>
  </div>

  <h3>登録練習場所一覧</h3>
  <div class ="row">
    <div class ="col-md-10 mt-2">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="no-wrap">練習場所ID</th>
            <th class="no-wrap">住所</th>
          </tr>
        </thead>
        <% @sites.each do |site| %>
        <tbody>
          <tr>
            <td><%= site.id %></td>
            <td class="site_click">
              <%= site.site_name %>
              <div class="site-delete">
                <%= link_to '削除',site_path(site.id), method: :delete, class:"btn btn-danger no-wrap" %>
              </div>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>