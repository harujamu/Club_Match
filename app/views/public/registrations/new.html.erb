<p></p>
<div class ="container">
  <h2>ユーザー情報登録</h2>
  <div class ="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <table>
        <tbody>
          <tr>
            <td><%= f.label :クラブ名 %></td>
            <td><%= f.text_field :club_name, autofocus: true, autocomplete: "" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>プロフィール画像</td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :代表者名 %></td>
            <td><%= f.text_field :captain_last_name, autofocus: true, placeholder: "代表者姓" %></td>
            <td><%= f.text_field :captain_first_name, autofocus: true, placeholder: "代表者名" %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :主な活動場所 %></td>
            <td><%= f.select :prefecture, User.prefectures_i18n.keys.map{|k| [I18n.t("enums.user.prefecture.#{k}"), k]}, {include_blanck: t("選択してください")} %></td>
            <td><%= f.text_field :municipality, placeholder: "市区町村" %></td>
            <td><%= f.text_field :address, placeholder: "番地" %></td>
          </tr>
          <tr>
            <td><%= f.label :年齢層 %></td>
            <td><%= f.select :age_group, User.age_groups_i18n.keys.map{|k| [I18n.t("enums.user.age_group.#{k}"), k]}, {include_blanck: t("選択してください")} %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :ジャンル %></td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blanck:"選択してください" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, placeholder: "sample@email.com" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
            <td><%= f.label :パスワード（確認用） %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn btn-success btn-lg" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    <%= render "public/shared/links" %>
  </div>
</div>
