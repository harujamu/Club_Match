<div class="container">

  <div class="row mt-2">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 mx-auto">
      <h3 class="border-bottom">
        <%= @room.recruit.title %>
      </h3>
      <h5 class="row g-3 no-wrap">
        
        <div class="col-lg-3 col-md-4 col-sm-12 col-12 mt-1">
          練習日： <%= @room.recruit.date.strftime('%Y/%m/%d') %>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-12 col-12 mt-1">
          会場： <%= @room.recruit.site.site_name %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 mt-1">
          参加メンバー：
          <% @users.each do |user| %>
          <span><%= profile_image(user,user.genre,30,30) %></span>
          <% end %>
        </div>
      </h5>
    </div>
  </div>

  <!--送信フォームが高い位置にきすぎないようにstyeで最低限の高さ指定-->
  <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-5 chat-room-form">

    <% @messages.each do |message| %>
      <div class="row g-3">
        <% if message.user != current_user %>
        
          <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left">
            <small>
              <%= message.user.club_name %>
            </small>
          </div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-12 d-flex justify-content-start">
            <div class="col-lg-1 col-md-1 col-sm-1 col-1 pl-0 text-center">
              <%= link_to user_path(message.user), class:"text-dark" do %>
                <%= profile_image(message.user,message.user.genre,30,30) %>
              <% end %>
            </div>
              
            <div class="border rounded-pill bg-light message">
              <%= message.message %>
            </div>
          </div>

        <% else %>
        
          <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-right">
            <small>
              <%= message.user.club_name %>
            </small>
          </div>
          
          <div class="col-lg-12 col-md-12 col-sm-12 col-12 d-flex justify-content-end">
            <div class="border rounded-pill bg-light message">
              <%= message.message %>
            </div>
            
            <div class="col-lg-1 col-md-1 col-sm-1 col-1 text-left pr-0">
              <%= link_to user_path(message.user), class:"text-dark" do %>
                <%= profile_image(message.user,message.user.genre,30,30) %>
              <% end %>
            </div>
            
          </div>
        <% end %>

      </div>
    <% end %>
  </div>

  <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-5">
    <%= form_with model: @message, method: :post do |f| %>
      <div class="row g-3">
        <div class="col-lg-10 col-md-10 col-sm-10 col-10">
          <%= f.hidden_field :room_id, :value => @room.id %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
           <%= f.text_area :message, class:"form-control" %>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-2 col-2">
          <%= f.submit '送信', class:"btn btn-primary mb-5 p-3 w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
