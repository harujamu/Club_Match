<div class="container">
  <div class="row mt-5 mx-auto">

    <div class ="col-md-4">
      <div>
        <%= profile_image(@user,@user.genre,200,200) %>
        <p class="mt-2 ml-5"><%= @user.club_name %></p>
        <p class="ml-5">
          <%= link_to '編集',
            edit_user_path(@user.id),
            class:"btn btn-success btn-sm mr-2"
          %>
          <%= link_to '退会',
            user_unsubscribe_confirm_path(@user),
            class:"btn btn-danger btn-sm"
          %>
        </p>
        
      </div>

      <div class="mt-5">
        <ul class="list-unstyled">
          <li>
            <i class="fas fa-bell bell-icon"></i>　
            <%= link_to notifies_path, class:"text-dark" do %>
              通知 <%= @notifies.count %> 件
            <% end %>
          </li>
          <li>
            <i class="fas fa-map-pin mr-3"></i>
            <%= link_to '練習場所一覧', sites_path, class:"text-dark link" %>
          </li>
          <li>
            <i class="fas fa-thumbtack mr-3"></i>
            <%= link_to '応募履歴', entries_path, class:"text-dark link" %>
          </li>
          <li>
            <i class="fas fa-bullhorn mr-2"></i>
            <%= link_to '募集履歴', recruits_path, class:"text-dark link" %>
          </li>
        </ul>
      </div>
    </div>


    <div class="col-md-7 my-5">
      <%= render '/public/shared/user_information', user: @user, genre: @user.genre %>
    </div>

  </div>
</div>