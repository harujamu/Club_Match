<div class="container">
  <div class="row mt-5">

    <div class ="col-md-4">
      <!--ユーザー画像の表示-->
      <%= profile_image(@user,@user.genre,250,250) %>
      <p class="mt-2">
        <%= @user.club_name %>
        <!--<i class="fas fa-user-plus ml-2"></i><i class="fas fa-user-check"></i>-->
        <% if user_signed_in? %>
          <%= follow_button(@user,current_user) %>
        <% else %>
          <i class="fas fa-user-check"></i>
        <% end %>
        <%= @user.follows.count %>
      </p>
    </div>

    <div class="col-md-8">
      <%= render '/public/shared/user_information', user: @user, genre: @user.genre %>
    </div>

  </div>
</div>