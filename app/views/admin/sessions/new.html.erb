<div class ="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row g-3 mx-auto my-5 col-lg-7 col-md-10 col-sm-12 col-12">

      <div class="col-lg-2 col-md-2 col-sm-2 col-12 text-left mt-2">
        <p>email</p>
      </div>

      <div class="col-lg-10 col-md-10 col-sm-10 col-12 mt-2">
        <%= f.text_field :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: "sample-admin@com",
          class:"form-control"
        %>
      </div>

      <div class="col-lg-2 col-md-2 col-sm-2 col-12 text-left mt-2">
        <p>password</p>
      </div>

      <div class="col-lg-10 col-md-10 col-sm-10 col-12 mt-2">
        <%= f.password_field :password,
          autocomplete: "current-password",
          placeholder: "password",
          class:"form-control"
        %>
      </div>

      <div class="col-12 text-right mt-3">
        <%= f.submit "管理者ログイン", class:"btn btn-primary col-lg-10 col-md-10 col-sm-10 col-12" %>
      </div>

    </div>
  <% end %>

</div>
