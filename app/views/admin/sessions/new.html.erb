<p></p>
<div class ="container">
  <div class ="row">
  
  <div class="col-md-8 mx-auto mt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.text_field :email, autofocus: true, autocomplete: "email",placeholder: "sample-admin@com", size:"40" %></td>
        </tr>
        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password, autocomplete: "current-password",placeholder: "password", size:"40" %></td>
        </tr>
        <tr>
          <td></td>
          <td>　　<%= f.submit "管理者ログイン", class:"btn btn-primary w-50" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  </div>

  </div>
</div>
