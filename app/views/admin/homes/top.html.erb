<div class ="container">
  <div class ="row">
    <h2>ユーザー一覧</h2>
    
    <div class ="col-md-10 mt-5">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No.</th>
            <th>クラブ名</th>
            <th>代表者氏名</th>
            <th>e-mail</th>
            <th>活動ステータス</th>
          </tr>
        </thead>
        
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user.id), class:"text-dark link" do %>
                <%= user.club_name %>
              <% end %>
            </td>
            <td><%= user.captain_name %></td>
            <td><%= user.email %></td>
            <td><%= active_status(user) %></td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>