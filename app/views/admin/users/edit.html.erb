<div class ="container">
  <h2>ユーザー情報管理</h2>

  <div class ="row mt-5">

    <div class ="col-lg-2 col-md-2 col-sm-3 col-xs-3">
    <% if @user.image.attached? %>
      <%= image_tag @user.image, size: "150 X 150",
      class:"rounded-circle card-img-top" %>
    <% else %>
      <%= image_tag @user.genre.genre_image,
      size: "150 X 150", class:"rounded-circle card-img-top" %>
    <% end %>
    </div>

    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
    <%= form_with model: @user,url: admin_user_path(@user), method: :patch do |f| %>
      <table class="table table-borderless admin-user-table">
        <tbody>
          <tr class="caption">
            <td class="no-wrap"><%= f.label :クラブ名 %></td>
            <td>
              <%= f.text_field :club_name,
                autofocus: true,
                autocomplete:"",
                placeholder: "クラブ名",
                class:"form-control border-secondary club-name-form"
              %>
            </td>
          </tr>

          <tr class="caption">
            <td class="no-wrap"><%= f.label :代表者氏名 %></td>
            <td>
              <div class="row">
                <%= f.text_field :captain_last_name,
                  autofocus: true,
                  placeholder: "代表者姓",
                  class:"form-control border-secondary ml-3 name-form"
                %>

                <%= f.text_field :captain_first_name,
                  autofocus: true,
                  placeholder: "代表者名",
                  class:"form-control border-secondary name-form ml-3 last-name-form"
                %>
              </div>
            </td>
          </tr>

          <tr class="caption">
            <td class="no-wrap"><%= f.label :主な活動場所 %></td>
            <td>
              <div class="row">
                <%= f.select :prefecture,
                  User.prefectures_i18n.keys.map{|k| [I18n.t("enums.user.prefecture.#{k}"), k]},
                  {include_blanck: t("選択してください")},
                  class:"form-control border-secondary prefecture-form ml-3"
                %>
                <%= f.text_field :municipality,
                  placeholder: "市区町村",
                  class:"municipality-form form-control border-secondary ml-3"
                %>
                <%= f.text_field :address,
                  placeholder: "番地",
                  class:"form-control border-secondary address-form ml-3"
                %>
              </div>
            </td>
          </tr>

          <tr class="caption">
            <td class="no-wrap"><%= f.label :メールアドレス %></td>
            <td>
              <%= f.email_field :email,
                autofocus: true,
                placeholder: "sample@email.com",
                class:"form-control border-secondary e-mail-form"
              %>
            </td>
          </tr>

          <tr class="caption">
            <td class="no-wrap">活動状況</td>
            <td>
              <%= f.radio_button :active_status, true, class:"mr-2" %>
              <%= f.label :活動中 %>
              <%= f.radio_button :active_status, false, class:"ml-5 mr-2" %>
              <%= f.label :退会済 %>
            </td>
          </tr>

          <tr>
            <td></td>
            <td class="no-wrap text-right">
              <%= f.submit "更新",
                class:"btn btn-primary w-50"
              %>
            </td>
          </tr>
        </tbody>
      </table>

    <% end %>
    </div>

  </div>

</div>
