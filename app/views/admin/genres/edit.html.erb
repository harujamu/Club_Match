<div class ="container">
  <h3>ジャンル編集</h3>
  <div class = "row mt-5">
    <div class ="col-10">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <%= f.text_field :name, size:"50" %> <%= f.file_field :genre_image %>
        <%= f.submit '更新する', class:"btn btn-primary ml-2" %>
      <% end %>
      <h5 class="mt-5">
        登録中のジャンルイメージ：
        <%= image_tag @genre.genre_image, 
        size: "80x80", class:"rounded-circle m-3" %>
      </h5>
    </div>
  </div>
</div>