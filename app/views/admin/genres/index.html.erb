<div class ="container">
  <h3 class="mb-3">ジャンル登録</h3>
      
  <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
    <div class = "row g-3 mt-4 mx-auto">
      <div class ="col-lg-10 col-md-12 col-sm-12 col-xs-12 mt-1">
        <%= f.text_field :name, 
          placeholder:"ジャンル名", 
          class:"mr-2 form-control" 
        %>
      </div>
        
      <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12 mt-1">
        <%= f.file_field :genre_image %>
      </div>
      
      <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12 text-right mt-1">
        <%= f.submit '登録する', class:"btn btn-success" %>
      </div>
    </div>
  <% end %>

  
  <h3 class="mt-5 mb-3">ジャンル一覧</h3>
      
  <div class ="row">
    <div class ="col-lg-10 col-md-10 col-sm-12 col-xs-10 table-responsive">  
    
      <table class ="table table-bordered mx-auto">
        <thead>
          <tr>
          <th class="no-wrap">No.</th>
          <th class="no-wrap">ジャンル名・イメージ画像</th>
        </tr>
        </thead>
        
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td class="genre-preview no-wrap">
                <%= genre.name %>
                <span class="no-wrap">
                  <%= image_tag genre.genre_image, 
                    size: "50x50", 
                    class:"rounded-circle ml-3" 
                  %>
                  <%= link_to '編集',
                    edit_admin_genre_path(genre.id), 
                    class:"btn btn-success ml-2" 
                  %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>