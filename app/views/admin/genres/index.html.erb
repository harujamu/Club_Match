<div class ="container">
  <div class ="row">
    <div class ="col-md-10">
      <h3 class="mb-3">ジャンル登録</h3>
      
      <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field :name, size:"50", placeholder:"ジャンル名", class:"mr-2" %> 
        <%= f.file_field :genre_image %>
        <%= f.submit "登録", class:"btn btn-success" %>
      <% end %>
      
    </div>
  </div>
  
  <div class ="row my-5">
    <div class ="col-md-8">
      <h3 class="mb-3">ジャンル一覧</h3>
      
      <table class ="table table-bordered">
        <thead>
          <tr>
          <th>No.</th>
          <th>ジャンル名・イメージ画像</th>
          <th></th>
        </tr>
        </thead>
        
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td class="genre-preview">
              <%= genre.name %>
              <%= image_tag genre.genre_image, 
              size: "50x50", class:"rounded-circle" %>
            </td>
            <td>
              <%= link_to '編集',edit_admin_genre_path(genre.id), 
              class:"btn btn-success" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>