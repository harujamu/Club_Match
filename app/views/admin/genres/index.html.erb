<div class ="container">
  <div class ="row">
    <div class ="col-lg-10 col-md-10 col-sm-10 col-xs-10">
      <h3 class="mb-3">ジャンル登録</h3>
      
      <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field :name, placeholder:"ジャンル名", class:"mr-2 form-control" %> 
        <span class="space-between">
          <%= f.file_field :genre_image %>
          <%= f.submit "登録", 
            class:"btn btn-success w-25" 
          %>
        </span>
      <% end %>
      
    </div>
  </div>
  
  <div class ="row my-5">
    <div class ="col-lg-8 col-md-8 col-sm-10 col-xs-10 table-respansive">
      <h3 class="mb-3">ジャンル一覧</h3>
      
      <table class ="table table-bordered">
        <thead>
          <tr>
          <th class="no-wrap">No.</th>
          <th class="no-wrap">ジャンル名・イメージ画像</th>
        </tr>
        </thead>
        
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td class="genre-preview no-wrap">
              <%= genre.name %>
              <span class="no-wrap">
                <%= image_tag genre.genre_image, 
                  size: "50x50", 
                  class:"rounded-circle ml-3" 
                %>
                <%= link_to '編集',
                  edit_admin_genre_path(genre.id), 
                  class:"btn btn-success ml-2" 
                %>
              </span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>