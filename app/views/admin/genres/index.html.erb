<p></p>

<div class ="container">
  <div class ="row">
    <div class ="col-md-8">
      <h3>ジャンル登録</h3>
      <%= form_with model: @genre do |f| %>
      <%=f.text_field :name %>
      <%= f.submit "登録", class:"btn btn-success" %>
    <% end %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-8">
      <h3>ジャンル一覧</h3>
      
      <table class ="table table-bordered">
        <thead>
          <tr>
          <th>ジャンルID</th>
          <th>ジャンル名</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <td><%= link_to '編集',edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
        
      </table>
      
    </div>
    
  </div>
  
</div>